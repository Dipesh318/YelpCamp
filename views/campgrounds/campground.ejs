<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To YelpCamp!!</h1>
			<p>Explore the worlds best Campground with us</p>
			<p><a class="btn btn-large btn-primary" href="/campground/new">Add New CampGround</a></p>
		</div>
	</header>
	
	<div class="row text-center" style="display:flex ; flex-wrap:wrap;">
		<% campground.forEach(function(campG){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%=campG.image%>"> 
				<div class="caption">
					<h4>
						<%=campG.name%>
					</h4>
				</div>
				<p>
					<a href="/campground/<%=campG._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
			
	<% }) %>
		
		
	</div>

	
</div>

<%- include("../partials/footer") %>